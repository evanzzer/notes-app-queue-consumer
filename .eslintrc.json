{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [2, 4, {"SwitchCase": 1}],
        "linebreak-style": ["error", "windows"],
        "no-console": "off",
        "no-underscore-dangle": [
            "error", {
                "allow":  [
                    "_pool",
                    "_service",
                    "_validator",
                    "_transporter",
                    "_notesService",
                    "_mailSender"
                ]
            }
        ]
    }
}
